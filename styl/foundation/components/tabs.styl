@require "global"
@require "grid"
@require "type"

//
// @Variables
// Tabs Variables
//

$include-html-tabs-classes ?= $include-html-classes

$tabs-navigation-padding ?= $rem-calc(16)
$tabs-navigation-bg-color ?= $silver
$tabs-navigation-active-bg-color ?= $white
$tabs-navigation-hover-bg-color ?= lighten($tabs-navigation-bg-color,-6%)
$tabs-navigation-font-color ?= $jet
$tabs-navigation-active-font-color ?= $tabs-navigation-font-color
$tabs-navigation-font-size ?= $rem-calc(16)
$tabs-navigation-font-family ?= $body-font-family

$tabs-content-margin-bottom ?= $rem-calc(24)
$tabs-content-padding ?= $column-gutter/2

$tabs-vertical-navigation-margin-bottom ?= 1.25rem

//
// @Block
// Progress Bars Block
//

if $include-html-tabs-classes
	.tabs
		clearfix()
		margin-bottom 0 !important
		margin-left 0

		dd
		.tab-title
			position relative
			margin-bottom 0 !important
			list-style none
			float $default-float

			> a
				display block
				background-color $tabs-navigation-bg-color
				color $tabs-navigation-font-color
				padding $tabs-navigation-padding $tabs-navigation-padding * 2
				font-family $tabs-navigation-font-family
				font-size $tabs-navigation-font-size

				&:hover
					background $tabs-navigation-hover-bg-color

			&.active a
				background-color $tabs-navigation-active-bg-color
				color $tabs-navigation-active-font-color

		&.radius
			dd:first-child
			.tab:first-child
				a
					side-radius($default-float, $global-radius)

			dd:last-child
			.tab:last-child
				a
					side-radius($opposite-direction, $global-radius)

		&.vertical
			dd
			.tab-title
				position inherit
				float none
				display block
				top auto

	.tabs-content
		clearfix()
		margin-bottom $tabs-content-margin-bottom
		width 100%

		> .content
			display none
			float $default-float
			padding $tabs-content-padding 0
			width 100%

			&.active
				display block
				float none

			&.contained
				padding $tabs-content-padding

		&.vertical
			display block

			> .content
				padding 0 $tabs-content-padding

	@media $medium-up
		.tabs
			&.vertical
				width 20%
				max-width 20%
				float $default-float
				margin 0 0 $tabs-vertical-navigation-margin-bottom

		.tabs-content
			&.vertical
				width 80%
				max-width 80%
				float $default-float
				padding-{$default-float} 1rem

	.no-js
		.tabs-content > .content
			display block
			float none
